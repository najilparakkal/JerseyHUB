<%- include('headerUser') %>
  <div class="row mt-3 mx-6" style="margin-top:20vh; background-color: black;margin-bottom: 50px;">
    <div class="col-md-3">
      <div style="margin-top: 200px; margin-left: 10px;" class="text-center">
        <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation"
          data-mdb-animation-reset="true" data-mdb-animation-start="onScroll" data-mdb-animation-on-scroll="repeat"
          class="fas fa-3x fa-shipping-fast text-white"></i>
        <h3 class="mt-3 text-white">Welcome</h3>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-white btn-rounded back-button">Go back</button>
      </div>


    </div>
    <div class="col-md-9 justify-content-center" style="margin-top: 10%;">
      <div class="card card-custom pb-4" style="background-color: #495057;">
        <div class="card-body mt-0 mx-5">
          <div class="text-center mb-3 pb-2 mt-3">
            <h4 style="color: #495057 ;">Delivery Details</h4>
          </div>

          <form class="mb-0" method="post" action="/updateAdd" onsubmit=" return address()">

            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <p id="fullNameErr" style="color: red;"></p>
                  <input type="text"  id="fullName" name="fullName" class="form-control input-custom" style="background-color: #fd7e14;color: white;" />
                  <label class="form-label" for="form9Example1" style="color: white;">Full Name</label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <p id="phoneNumErr" style="color: red;"></p>
                  <input type="text" id="phoneNum" name="phoneNum" class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example2"style="color: white;">Phone Number</label>
                </div>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <p id="districtErr" style="color: red;"></p>
                  <input type="text" id="district" name="district" class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example3"style="color: white;">District</label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <p id="cityErr" style="color: red;"></p>
                  <input type="text"  id="city" name="city"  class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example4"style="color: white;">City</label>
                </div>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <p id="stateErr" style="color: red;"></p>
                  <input type="text" id="state" name="state" class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example6"style="color: white;">State</label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline" style="display: flex;">
                  <div >
                    <p id="pincodeErr" style="color: red;"></p>
                    <input type="number" id="pincode" name="pincode" class="form-control input-custom" style="background-color: #fd7e14;color: white; padding-left: 150px;"/>
                    <label class="form-label" for="typeEmail"style="color: white;">Pincode</label>
                  </div>
                  <div style="margin-left: 30px; ;"> 
                    <p id="houseNumErr" style="color: red;"></p>
                    <input type="number" id="houseNumber" name="houseNum" class="form-control input-custom" style="background-color: #fd7e14;color: white;padding-left: 100px"/>
                    <label  class="form-label" for="typeEmail"style="color: white;margin-top:-100px;">House Num</label>
                  </div>
                </div>
              </div>
            </div>

            <div class="float-end ">
              <input type="hidden" id="id" name="id" value="<%= address.id %>">
              <button type="submit" class="btn btn-primary btn-rounded" style="background-color: #0062CC ;">Submit</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <div style="margin-top: 30px;">
    <%- include('footerUser') %>
  </div>