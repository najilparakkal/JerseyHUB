<%- include('headerUser') %>
  <div class="row mt-3 mx-6" style="margin-top:20vh; background-color: black;margin-bottom: 50px;">
    <div class="col-md-3">
      <div style="margin-top: 200px; margin-left: 10px;" class="text-center">
       
        <h3 class="mt-3 text-white">Change Password </h3>
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-white btn-rounded back-button">Go back</button>
      </div>


    </div>
    <div class="col-md-9 justify-content-center" style="margin-top: 10%;">
      <div class="card card-custom pb-4" style="background-color: #495057;">
        <div class="card-body mt-0 mx-5">
          <div class="text-center mb-3 pb-2 mt-3">
            <h4 style="color: #495057 ;">Delivery Details</h4>
          </div>

          <form class="mb-0" method="post" action="/changePassword" onsubmit=" return validatePassword()">

            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <p id="currentPasswordErr" style="color: red;"></p>
                  <input type="password"  id="currentPassword" name="currentPassword" class="form-control input-custom" style="background-color: #fd7e14;color: white;" />
                  <label class="form-label" for="form9Example1" style="color: white;">Current Password</label>
                </div>
              </div>
              <div class="col">
                <div class="form-outline">
                  <p id="newPasswordErr" style="color: red;"></p>
                  <input type="password" id="newPassword" name="newPassword" class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example2"style="color: white;">New Password</label>
                </div>
              </div>
            </div>
            <div class="row mb-4">
              <div class="col">
                <div class="form-outline">
                  <p id="confirmPasswordErr" style="color: red;"></p>
                  <input type="text" id="confirmPassword" name="confirmPassword" class="form-control input-custom" style="background-color: #fd7e14;color: white;"/>
                  <label class="form-label" for="form9Example6"style="color: white;">Confirm Password</label>
                </div>
              </div>
           
            </div>

            <div class="float-end ">
              <button type="submit" class="btn btn-primary btn-rounded" style="background-color: #0062CC ;">Update Password</button>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>

  <div style="margin-top: 30px;">
    <%- include('footerUser') %>
  </div>